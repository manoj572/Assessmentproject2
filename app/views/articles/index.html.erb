<center>
<h1>Articles listing</h1>
<table>
<thead>
<style>
.city{background-color:orange;color:red;padding:10px}
</style>
<tr>
   <th class="city"> Title </th>
   <th class="city"> Description </th>
   <th class="city" colspan="3"> Action </th>
</tr>
</thead>
<tbody>
    <% @articles.each do |article| %>
        <style>
        .text{background-color:skyblue;color:blue;padding:15px}
        .input{background-color:skyblue;color:black;padding:15px}
        </style>
       <tr>
           <td class="input"><%= article.title %></td>
           <td class="input"><%= article.description %></td>
           <td class="text"><%= link_to 'Show', article_path(article) %></td>
           <td class="text"><%= link_to 'Edit', edit_article_path(article) %></td>
       </tr>
    <% end %>
</tbody>
</table>
<p>
<%= link_to 'Create new article', new_article_path %>
</p>
<a href="http://127.0.0.1:3000/articles/login"  target="_self" ><button>Logout</button></a>
<style>
a:link, a:visited{ background-color:lightblue;
                   color:purple;
                   padding: 15px 25px;
                   text-align:center;
                   text-decoration:none;
                   display:inline-block;}
a:hover, a:active{background-color:pink;}
</style>
</center>

